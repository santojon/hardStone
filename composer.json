{
    "require": {
        "php": ">=5.3.0",
        "silex/silex": "~1.0@dev",
        "chh/cache-service-provider": "~1.0",
        "ext-libevent": "*",
        "ext-curl": "*",
        "ext-sundown": "*"
    },
    "extra": {
        "heroku": {
            "document-root": "./",
            "index-document": "index.html",
            "php-config": [
                "short_open_tag=on",
                "date.timezone=America/Brasil",
                "newrelic.appname=hardStone"
            ],
            "engines": {
                "php": "5.5.*",
                "nginx": "1.4.*"
            },
            "compile": [
                "echo $FOO"
            ],
            "newrelic": true
        }
    }
}